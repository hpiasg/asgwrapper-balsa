<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>win</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<files>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>legal</outputDirectory>
			<destName>ASGwrapper-balsa_LICENSE.txt</destName>
		</file>
		<file>
			<source>NOTICE.txt</source>
			<outputDirectory>legal</outputDirectory>
			<destName>ASGwrapper-balsa_NOTICE.txt</destName>
		</file>
		<file>
			<source>README.md</source>
			<outputDirectory>readme</outputDirectory>
			<destName>ASGwrapper-balsa_README.md</destName>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>*:*:zip:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
